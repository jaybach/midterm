<div class="container">

   <h1>Create a test:</h1>
   <br>

  <% if current_user %>

  <form method="post" action="/tests">

      <div>
      <label for="name">New Test Name:</label>
      <input type="text" name="name" value="<%=@new_test.name if @new_test %>">
      <input type="hidden" name="user_id" value="<%= current_user.id if @new_test %>">
      </div>

      <button type="submit" class="btn btn-default">Create test</button>
      </div>

  </form>

  <% current_user.tests.each do |test| %>
  <div>
    <h3><a href="/tests/<%= test.id%>"><%= test.name %></a> </h3>
  </div>
<% end %>

  <% else %>

  <div>
      <strong>Access restricted. Please login first!</strong>
  </div>

  <% end %>

